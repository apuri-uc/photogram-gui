<h1><%= @the_user.username %></h1>

<dl>
  <dt>ID</dt>
  <dd><%= @the_user.id %>

  <dt>Edit user</dt>

    <form action="/update_user/<%= @the_user.username %>">
    <label for="modify_user">Username</label>
    <input id="modify_user" type="text" name="query_modify_user" value="<%= @the_user.username %>">
    </form>
    <button>Update user</button>

</dl>

<h2>Own photos (<%= @the_user.own_photos.size %>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <%= @the_user.own_photos.each do |a_photo| %>
    <tr>
    <td>
      <img src= "<%= a_photo.image %>">
    </td>
    <td>
       <%= a_photo.poster.username %>
    </td>
    <td><%= a_photo.caption %></td>
    <td><%= a_photo.created_at %></td>
    <td></td>
  </tr>
<% end %>
</table>
